{
  "name": "game-server",
  "version": "1.0.0",
  "description": "A multiplayer game server with player management and real-time communication",
  "main": "./src/GameServer.js",
  "type": "module",
  "scripts": {
    "start": "node src/server/GameServer.js",
    "dev": "nodemon src/server/GameServer.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --maxWorkers=2",
    "lint": "eslint 'src/**/*.js'",
    "lint:fix": "eslint 'src/**/*.js' --fix",
    "build": "babel src -d dist",
    "prettier": "prettier --write 'src/**/*.{js,json,html,css}'",
    "start:prod": "NODE_ENV=production node src/server/GameServer.js"
  },
  "keywords": [
    "game",
    "server",
    "multiplayer",
    "websocket",
    "real-time"
  ],
  "author": "David Talevski",
  "license": "ISC",
  "dependencies": {
    "chess.js": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "eslint": "^8.31.0",
    "prettier": "^2.8.3",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/davidtalevski/game-server.git"
  },
  "bugs": {
    "url": "https://github.com/davidtalevski/game-server/issues"
  },
  "homepage": "https://github.com/davidtalevski/game-server#readme"
}